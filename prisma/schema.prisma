datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Categorias {
  categoria_id Int    @id @default(autoincrement())
  carta_id     Int
  nombre       String
  orden        Int    @default(0)
  
  @@map("categorias")
}

model Platos {
  plato_id      Int     @id @default(autoincrement())
  nombre        String
  precio        Decimal
  ingredientes  String?
  categoria_id  Int
  orden         Int     @default(0)
  visible       Boolean @default(true)

  @@map("platos")
}