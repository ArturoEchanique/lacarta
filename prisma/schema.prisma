datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Categorias {
  categoria_id Int    @id @default(autoincrement())
  carta_id     Int
  nombre       String
  orden        Int    @default(0)
  visible       Boolean @default(true)
  
  @@map("categorias")
}

model Platos {
  plato_id      Int     @id @default(autoincrement())
  nombre        String
  precio        Decimal
  ingredientes  String?
  categoria_id  Int
  orden         Int     @default(0)
  visible       Boolean @default(true)

  @@map("platos")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  // otros campos que desees a√±adir...

  @@map("users")
}